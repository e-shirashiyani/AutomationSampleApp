default_platform(:ios)

platform :ios do
  before_all do
    # Select the correct Xcode version for CI (if multiple versions are installed)
    xcode_select "/Applications/Xcode_15.4.app"
  end

  desc "Build the app"
  lane :build_app_only do
    build_app(
      project: "AutomationTestProject.xcodeproj",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.test.automationSampleTest" => "AutomationTestAppDistributionProvisionProfile"
        }
      }
    )
  end

  desc "Upload to TestFlight"
  lane :upload_to_testflight do
    upload_to_testflight
  end

  desc "Build and upload to TestFlight"
  lane :build_and_upload do
    build_app_only
    upload_to_testflight
  end
end