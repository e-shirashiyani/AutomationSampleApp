default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :build_and_upload do
    build_app(
      project: "AutomationTestProject.xcodeproj", # Your project's .xcodeproj
      scheme: "AutomationTestProject",            # Your app's scheme
      export_method: "app-store",                 # Use app-store for TestFlight
      export_options: {
        provisioningProfiles: {
          "com.test.automationSampleTest" => "AutomationTestProject" # Your app's bundle identifier and profile name
        },
        signingStyle: "manual",
        uploadSymbols: true,
        uploadBitcode: false
      }
    )
    upload_to_testflight
  end
end