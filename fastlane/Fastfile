default_platform(:ios)

platform :ios do
  desc "Build the app"
  lane :build_app_only do
    build_app(
      project: "AutomationTestProject.xcodeproj",
      scheme: "AutomationTestProject",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.test.automationSampleTest" => "AutomationTestAppDistributionProvisionProfile"
        },
        signingStyle: "manual",
        uploadSymbols: true,
        uploadBitcode: false
      }
    )
  end

  desc "Upload the build to TestFlight"
  lane :upload_to_testflight do
    upload_to_testflight
  end
end